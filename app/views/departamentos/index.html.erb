<h1>Departamentos</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @departamentos.each do |departamento| %>
      <tr>
        <td><%= departamento.nome %></td>
        <td width="1"><%= link_to 'Show', departamento %></td>
        <td width="1"><%= link_to 'Edit', edit_departamento_path(departamento) %></td>
        <td width="1"><%= link_to 'Destroy', departamento, confirm: 'Tem certeza?', method: :delete %></td>
      </tr>
    <% end %>
  </tbody>  
</table>

<br />

